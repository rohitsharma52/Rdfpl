                  </div>
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">UPDATE Category</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">UPDATE Category Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
                    <form action="" method="post" enctype="multipart/form-data">
                        <div class="row mt-5">
                            <div class="form-group col-md-6">
                                <label for="name">Name <span style="color:red;">*</span></label>
                                <input type="text" class="form-control" id="name" name="name"value="<%=responce.name%>" required>
                            </div>

                            </div>
                            <div class="row mt-5">
                                <div class="form-group col-md-6">
                                    <label for="name">Descripation <span style="color:red;">*</span></label>
                                    <input type="text" class="form-control" id="name" name="Descripation"value="<%=responce.Descripation%>" required>
                                </div>
                                <div class="form-group col-md-6">
                                  <label for="name">Image <span style="color:red;">*</span></label>
                                  <input type="file" class="form-control" id="name" name="image" >
                                  <img id="slide_img_path" height="100" width="100" src="<%= responce.image %>">

                              </div> 
                                </div>
                                <div class="row mt-5">
                                  <div class="form-group col-md-6">
                                      <label for="show_home">Show Home <span style="color:red;">*</span></label><br>
                                      <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="show_home" id="show_home_yes" value="1" <%= responce.show_home == 1 ? 'checked' : '' %> required>
                                          <label class="form-check-label" for="show_home_yes">Yes</label>
                                      </div>
                                      <div class="form-check form-check-inline">
                                          <input class="form-check-input" type="radio" name="show_home" id="show_home_no" value="2" <%= responce.show_home != 1 ? 'checked' : '' %> required>
                                          <label class="form-check-label" for="show_home_no">No</label>
                                      </div>
                                  </div>
                              </div>
                            
                
                       
                
                        <div class="form-group mt-5">
                            <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                        </div>
                    </form>
                </div>
          </div>
        </div>
        <%- include('../../common/footer')%>  